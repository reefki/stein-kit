<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Stein Kit plugin">
    <description>Sniffs for WordPress plugins, with minor modifications for Stein Kit</description>

    <rule ref="WordPress"/>

    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="is_theme" value="false"/>
        </properties>
    </rule>

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="stein-kit"/>
            </property>
        </properties>
    </rule>

    <rule ref="WordPress.WP.DeprecatedFunctions">
        <properties>
            <property name="minimum_supported_version" value="4.0"/>
        </properties>
    </rule>
</ruleset>